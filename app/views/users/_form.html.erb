<%= form_for(@user, url: users_path) do |f| %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-danger alert-dismissible w-75" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= message %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-xs-4">
      <div class="form-group">
        <%= f.label :first_name, "First Name: " %> 
        <%= f.text_field :first_name, placeholder: "First Name...",class: "form-control" %><br>
        <%= f.label :last_name, "Last Name: " %> 
        <%= f.text_field :last_name, placeholder: "Last Name...",class: "form-control" %><br>
        <%= f.label :email, "Email: " %> 
        <%= f.text_field :email, placeholder: "Email...",class: "form-control" %><br>
        <%= f.label :password, "Password: " %> 
        <%= f.password_field :password, placeholder: "Password...",class: "form-control" %><br>
        <%= f.hidden_field :role, value: "judge" %>
      </div>
    </div>
  </div>
  <%= f.submit "Create Judge", class: "btn btn-success" %>
<% end %>